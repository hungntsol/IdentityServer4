@model string

@{
	var url = $"/OAuth/Authorize{Model}";
}

@url

<br/>

<h2>JwtServer Authorize page</h2>
<form action="@url" method="post">
	<input type="text" name="username" placeholder="username"/>
	<button type="submit">Login</button>
</form>